<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    tools:context=".Vista.Fragment.RegistrarPersonalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#052927"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_weight="20"
            android:background="#052927"
            android:padding="20dp">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:layout_marginTop="-100dp"
            android:orientation="vertical"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#FBFAF2"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:includeFontPadding="false"
                    android:text="Registrar Personal"
                    android:textAlignment="center"
                    android:textColor="@color/colornegrocar"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:text="SELECCIONAR UNIDAD" />

                <Spinner
                    android:id="@+id/spinnerUnidad"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="NOMBRE COMPLETO" />

                <EditText
                    android:id="@+id/txtNombreCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="DNI" />

                <EditText
                    android:id="@+id/txtDni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:text="DOMICILIO" />

                <EditText
                    android:id="@+id/txtDomicilio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp"
                    android:text="CARGO" />

                <Spinner
                    android:id="@+id/spinnerCargo"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:entries="@array/cargos"
                    android:textColor="@color/colornegrocar"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnRegistrarPersonal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/button_rounded"
                    android:elevation="5dp"
                    android:text="REGISTRAR"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>